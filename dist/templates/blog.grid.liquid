<!-- /templates/blog.grid.liquid -->

{% assign column_width = 'column l4 m6 s12' %}

{% paginate blog.articles by 12 %}

  <section class="container l">
    {% if current_tags %}
      <h1>{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
    {% else %}
      <h1>{{ blog.title }}</h1>
    {% endif %}

    <div class="row">
      {% for article in blog.articles %}
        {% include 'blog-article' %}
      {% endfor %}
    </div>

    {% include 'theme-pagination' with 'hr' %}
  </section>

{% endpaginate %}
