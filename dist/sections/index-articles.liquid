<!-- sections/news.liquid -->

{%- assign blog = blogs[section.settings.blog] -%}
{% assign title = section.settings.title %}
{% assign article_limit = section.settings.article_limit %}
{% assign column_width = 'column l4 m4 s12' %}

<section class="container l">
  {% if title != blank %}
    <header>
      <h2>{{ title }}</h2>
    </header>
  {% endif %}

  <div class="row">
    {% for article in blog.articles limit: article_limit %}
      {% include 'blog-article' %}
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Featured news",
    "class": "news-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured news articles"
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },
      {
        "type": "select",
        "id": "article_limit",
        "label": "Posts",
        "default": "3",
        "options": [
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "6",
            "label": "6"
          },
          {
            "value": "9",
            "label": "9"
          },
          {
            "value": "12",
            "label": "12"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Articles",
        "category": "Blog",
        "settings": {
          "blog": "News",
          "article_limit": "3"
        }
      }
    ]
  }
{% endschema %}
